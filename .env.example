# Example environment variables for Conduit
# Copy this file to .env and customize for your deployment

# Required: Your Matrix server's domain name
CONDUIT_SERVER_NAME=matrix.example.com

# Database configuration
CONDUIT_DATABASE_PATH=/var/lib/matrix-conduit
CONDUIT_DATABASE_BACKEND=rocksdb

# Network configuration
CONDUIT_PORT=6167
CONDUIT_ADDRESS=0.0.0.0

# Optional: Maximum request size (in bytes)
CONDUIT_MAX_REQUEST_SIZE=20000000

# Optional: Enable registration (true/false)
CONDUIT_ALLOW_REGISTRATION=false

# Optional: Federation (true/false)
CONDUIT_ALLOW_FEDERATION=true

# Optional: Enable encryption (true/false)
CONDUIT_ALLOW_ENCRYPTION=true

# Optional: Trusted servers for key distribution
CONDUIT_TRUSTED_SERVERS=["matrix.org"]

# Optional: Maximum concurrent requests
CONDUIT_MAX_CONCURRENT_REQUESTS=100
